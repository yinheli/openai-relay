{
  "name": "openai-relay",
  "module": "index.ts",
  "type": "module",
  "scripts": {
    "start": "bun run index.ts",
    "format": "biome format .",
    "format:check": "biome format . --check",
    "lint": "biome check .",
    "lint:fix": "biome check . --apply",
    "prepare": "husky install"
  },
  "devDependencies": {
    "bun-types": "latest",
    "@biomejs/biome": "1.5.3",
    "typescript": "^5.3.3",
    "husky": "^9",
    "lint-staged": "^15"
  },
  "dependencies": {
    "pino": "^9.5.0",
    "pino-pretty": "^11.3.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json}": [
      "biome check --apply --no-errors-on-unmatched",
      "biome format --write --no-errors-on-unmatched"
    ]
  }
}
